    />
        <Card.Actions>
            <Button style={styles.cardButtonStyle}>
                <Text style={{color:'white'}}>View</Text>
            </Button>
            <Button style={styles.cardButtonStyle}>
                <Text style={{color:'white'}}>Ignore</Text>
            </Button>
        </Card.Actions>
    </Card>
    </TouchableRipple>
    );
    }
}


class AlertCard extends React.Component{
    
    constructor(props){
        super(props)
        this.props = props
    }

    render(){
    return(
    <TouchableRipple
        onPress={() => 
            {
                console.log('Pressed')
            }
    }
        rippleColor="rgba(0, 0, 0, .32)"
    >
    <Card style={styles.cardStyle}>
    <Card.Title
    title = {this.props.cardTitle}
    subtitle="Some Activity has been detected "
